<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_my_location_by_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_base_fillet_border_bg"
            android:padding="10dp"
            android:text="Android系统: 我的位置"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_my_location_by_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_base_fillet_border_bg"
            android:padding="10dp"
            android:text="Google地图：My Location"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_draw_polygons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_base_fillet_border_bg"
            android:padding="10dp"
            android:text="绘制不规则多边形"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_polygon_barycenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_base_fillet_border_bg"
            android:padding="10dp"
            android:text="计算不规则多边形-重心"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_find_point_in_polygon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_base_fillet_border_bg"
            android:padding="10dp"
            android:text="判断一个点是否在不规则多边形内部"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_sliding_up_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_base_fillet_border_bg"
            android:padding="10dp"
            android:text="多级悬浮滑动面板"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="about" />

    </LinearLayout>
</ScrollView>


